##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

##########################################
# File Extension Settings
##########################################

# JAVA, Groovy, Kotlin Files
[*.{java,groovy,kt,kts}]
indent_size = 2

# Web Files
[*.{htm,html,js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,css,sass,scss,less,pcss,svg,vue}]
indent_size = 2

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# XML Configuration Files
[*.xml]
indent_size = 2

# Markdown Files
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# C/C++
[*.{c,h,cc,hh,cpp,hpp,cxx,hxx}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Python
[*.py]
indent_style = space
indent_size = 4

# Go Files
[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

# Rust/Cargo
[*.{rs,toml}]
indent_size = 4

# Git Files
[{.gitattributes,.gitignore,.gitmodules}]
indent_style = tab
